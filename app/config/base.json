{
	"debug": true,
	"mapUnlockThreshold": 3,
	"useLocalSessions": true,
	"welcomePage": {
		"avatarSelectionEnabled": true,
		"backgroundColor": "black",
		"enterSpaceButtonText": "Start",
		"avatarSelectionText": "Select your Avatar",
		"headerHtml": "<br><h1>Welcome</h1>"
	},
	"avatars": {
	  "normal": {
	    "black": "./js/images/default-avatar/default-avatar-black.png",
	    "blue": "./js/images/default-avatar/default-avatar-blue.png",
	    "red": "./js/images/default-avatar/default-avatar-red.png",
	    "green": "./js/images/default-avatar/default-avatar-green.png"
	  }
	},
	"specialAvatars": {
	},
	"map": {
		"stats": {
			"numberInHouse": {
				"display": true,
				"text": "{0} in house",
				"emoji": "🏚️"
			},
			"numberInRooms": {
				"display": true,
				"text": "{0} in rooms",
				"emoji": "🚪"
			},
			"numberInHallways": {
				"display": true,
				"text": "{0} roaming",
				"emoji": "🌓"
			},
			"additionalStats": [
				{
					"text": "{0} doing activity",
					"match": ".*Room",
					"emoji": "🎯"
				},
				{
					"text": "{0} in closet",
					"match": ["closet"],
					"emoji": "🗝"
				}
			]
		}
	}
}
